@using UniversityContracts.ViewModels;
@model EducationViewModel;
@{ ViewData["Title"] = "Update"; }

<div class="text-center">
    <h2 class="display-4">Изменение обучения</h2>
</div>
<form method="post">
    <div class="row">
        <div class="col-4">Название:</div>
        <div class="col-8"><input type="text" name="name" id="name" value="@Model.Name" /></div>
    </div>
    <div class="row">
        <div class="col-4">Дата обучения:</div>
        <div class="col-4 form-group">
            <input asp-for="EducationDate" id="datepicker" name="datepicker" class="form-control" />
            <span asp-validation-for="EducationDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="DisciplineIds" class="control-label"></label>
        <select asp-for="DisciplineIds" id="reserve" class="form-control" multiple asp-items="ViewBag.Disciplines"></select>
    </div>
    <div class="row">
        <div class="col-4"></div>
        <div class="col-8">
            <input type="submit" value="Изменить" class="btn btn-primary" />
        </div>
    </div>
</form>

@section Scripts
    {

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
        $(function () {
            $("#date").datepicker();
            $('#date').datepicker("setDate", @Model.EducationDate);
        });
    </script>
}