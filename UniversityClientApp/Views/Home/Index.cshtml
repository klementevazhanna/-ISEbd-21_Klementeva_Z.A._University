@using UniversityContracts.ViewModels;
@model List<EducationViewModel>
@{ ViewData["Title"] = "Home Page"; }
<div class="text-center">
    <h1 class="display-4">Обучения</h1>
</div>
<div class="text-center">
    @{ if (Model == null)
                    {
        <h3 class="display-4">Авторизируйтесь</h3> return;
                    }
        <p>
            <a asp-action="Create">Создать обучение</a>
        </p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Номер
                                </th>
                                <th>
                                    Название
                                </th>
                                <th>
                                    Количество дисциплин
                                </th>
                                <th>
                                    Стоимость
                                </th>
                                <th>
                                    Дата обучения
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Count)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CostToPay)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EducationDate)
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-Id="@item.Id">Изменить</a>
                    </td>
                    <td>
                        <a asp-action="Index" asp-controller="Payment" asp-route-EducationId="@item.Id">Оплатить</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-Id="@item.Id">Удалить</a>
                    </td>
                </tr>}
                        </tbody>
                    </table> }
</div>
